{
    "env": {
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "globals": {
      "__DEV__": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
      "semi": "error",
      "no-use-before-define": "off"
    }
}
